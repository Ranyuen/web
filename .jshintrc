// vim:set ft=javascript:
{
  // Enforcing options
  "camelcase": true,
  "curly": true,
  "eqeqeq": true,
  "forin": true,
  "immed": true,
  "indent": 2,
  "noarg": true,
  "quotmark": "single",
  "undef": true,
  "unused": true,
  "strict": true,
  "trailing": true,
  "maxparams": 7,
  "maxdepth": 4,
  "maxstatements": 12,
  "maxcomplexity": 10,
  "maxlen": 120,

  // Relaxing options
  "validthis": true,

  // Environments
  "devel": true,
  "node": true
}
