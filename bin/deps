#!/bin/bash

if test "install" = "$1"; then
  echo "We need PHP, Composer, Node.js and Ruby."
  composer install
  npm install -g bower gulp
  npm install
  bower install
  gem install bundler
  bundle install
  gulp build
  gulp test
elif test "update" = "$1"; then
  echo "Please don't always update automatically. Check major updates by yourself."
  composer update
  npm update
  bower update
  bundle update
  gulp build
  gulp test
else
  echo -e "Manage dependencies with your dev env.

bin/deps.sh COMMAND

COMMAND:
install\tInstall dependencies with dev.
update\tUpdate dependencies with dev."
fi
